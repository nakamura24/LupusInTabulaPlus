<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
    <TextView
        android:id="@+id/moning_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/moning_textView_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />
 
    <TextView
        android:id="@+id/moning_textView_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moning_textView_title"
        android:layout_centerHorizontal="true"
        android:text=""
		android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moning_textView_message"
        android:layout_centerHorizontal="true"
        android:onClick="onClickOkButton"
        android:text="@string/common_text_ok" />

</RelativeLayout>